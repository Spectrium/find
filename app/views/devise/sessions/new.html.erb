
  <head>
    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
  </head>
<body class="text-center">
<div class="form-signin">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :emailclient, class:"pos" %><br />
        <%= f.email_field :email, autofocus: true, id:"inputEmail", class:"form-control",placeholder:"Email address" ,autocomplete: "email" %>
      </div>
      <br />
      <div class="field">
        <%= f.label :password, class:"pos" %><br />
        <%= f.password_field :password, autocomplete: "current-password", id:"inputPassword", class:"form-control", placeholder:"Password" %>
      </div>
      <br />
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>
    </div>
</body>
